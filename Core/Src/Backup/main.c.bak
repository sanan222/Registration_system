// Activating interrupt function to perform change between 2 modes
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	mode = mode + 1;
	if(mode>1)
	{
		mode = 0;
	}
}

void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef* hadc)
{
	if (hadc->Instance==ADC1)
	{
		data[0] = adcbuffer[0];
		data[1] = adcbuffer[1];
	}
}
